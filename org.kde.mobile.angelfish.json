{
    "id": "org.kde.mobile.angelfish",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.14",
    "sdk": "org.kde.Sdk",
    "base": "io.qt.qtwebengine.BaseApp",
    "base-version": "5.14",
    "command": "angelfish",
    "tags": ["nightly"],
    "desktop-file-name-suffix": " (Nightly)",
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--socket=pulseaudio",
        "--socket=x11",
        "--socket=wayland",
        "--device=dri",
        "--filesystem=xdg-data",
        "--filesystem=xdg-download",
        "--talk-name=org.freedesktop.Notifications",
        "--own-name=org.kde.mobile.angelfish"
    ],
    "separate-locales": false,
    "add-extensions": {
        "org.freedesktop.Platform.ffmpeg-full": {
            "directory": "lib/ffmpeg",
            "add-ld-path": ".",
            "version": "19.08"
        }
    },
    "cleanup-commands": [
        "mkdir -p ${FLATPAK_DEST}/lib/ffmpeg"
    ],
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "build-options": {
        "append-path": "/usr/lib/sdk/rust-stable/bin",
        "env": {
            "RUST_BACKTRACE": "1",
            "CARGO_NET_OFFLINE": "true",
            "RUSTFLAGS": "--remap-path-prefix =../"
        }
    },
    "modules": [
        {
            "name": "corrosion",
            "buildsystem": "cmake-ninja",
            "config-opts": [ "-DCORROSION_BUILD_TESTS=OFF" ],
            "build-options": {
                "env": {
                    "CARGO_HOME": "/run/build/corrosion/cargo"
                }
            },
            "cleanup": [
                "/app"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/AndrewGaspar/corrosion",
                    "commit": "3fa054420ff9e8ecb6e6c2552713c6b86fce3e43"
                },
                "flatpak/corrosion-generated-sources.json"
            ]
        },
        {
            "name": "angelfish",
            "buildsystem": "cmake-ninja",
            "config-opts": ["-DBUILD_TESTING=OFF", "-DCMAKE_BUILD_TYPE=Release"],
            "builddir": true,
            "build-options": {
                "env": {
                    "CARGO_HOME": "/run/build/angelfish/cargo"
                }
            },
            "sources": [
                {
                    "type": "dir",
                    "path": ".",
                    "skip": [".git"]
                },
                "generated-sources.json"
            ]
        }
    ]
}
